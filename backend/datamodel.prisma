enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

enum Badges {
  BeautyPartner
  FirstOrder
  Explorer
  PlayerOne
  PopStar
  Prospecter
  GlobalSeller
  Diamond
  SeasonLeader
  Influencer
  RisingStar
  Focus
}

enum OrderStatus {
  VALIDATING
  APROVED
  DISAPROVED
}

type User {
  id: ID! @id
  name: String!
  document: String!
  email: String! @unique
  password: String!
  birthday: DateTime
  phone: String
  balance: Float @default(value:0)
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission] @scalarList(strategy: RELATION)
  badges: [Badges] @scalarList(strategy: RELATION)
  cart: [CartItem!]!
}

type Item {
  id: ID! @id
  title: String!
  category: Int
  description: String!
  image: String
  largeImage: String
  listPrice: Int!
  bestPrice: Int!
  reference: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  user: User
}

type CartItem {
  id: ID! @id
  quantity: Int! @default(value:1)
  item: Item
  user: User
}

type Cart {
  id: ID! @id
  items: [CartItem!]!
}

type OrderItem {
  id: ID! @id
  title: String!
  description: String!
  image: String!
  largeImage: String!
  listPrice: Int!
  bestPrice: Int!
  quantity: Int! @default(value: 1)
  user: User
}

type Order {
  id: ID! @id
  items: [OrderItem!]!
  total: Float!
  user: User!
  charge: String
  paymentMethod: String!
  cashback: Int! @default(value: 5)
  status: [OrderStatus] @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}